{{#if loginFailed}}
  <div class="alert alert-danger" style="width: 18rem;">Invalid username or password.</div>
{{/if}}
<div class="card" style="width: 18rem;">
  <article class="card-body">
    <h4 class="card-title text-center mb-4 mt-1">Sign in</h4>
    <hr>
    <p class="text-success text-center">Your passwords live here</p>
    <form {{action "authenticate" on="submit"}}>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
          </div>
          {{input type="email" class="form-control" value=username id="username" placeholder="Email or login" aria-label="Input group example" aria-describedby="btnGroupAddon"}}
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
          </div>
          {{input type="password" class="form-control" value=password id="password" placeholder="******" aria-label="Input group example" aria-describedby="btnGroupAddon"}}
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
      </div>
    </form>
  </article>
</div>